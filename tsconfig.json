{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/[locale]/page.jsx",
    "src/components/cross/Cross.jsx",
    "src/components/website/Website.jsx",
    "src/components/motion/Motion.jsx",
    "src/components/graphic/Graphic.jsx",
    "src/app/[locale]/articles/page.jsx",
    "src/app/[locale]/works/[slug]/page.jsx",
    "src/app/[locale]/works/oli/page.jsx",
    "src/i18n/request.js",
    "src/i18n/routing.js",
    "src/middleware.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
